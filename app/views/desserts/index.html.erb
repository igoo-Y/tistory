<p id="notice"><%= notice %></p>

<h1>Desserts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desserts.each do |dessert| %>
      <tr>
        <td><%= dessert.title %></td>
        <td><%= dessert.content %></td>
        <td><%= dessert.status %></td>
        <td><%= link_to 'Show', dessert %></td>
        <td><%= link_to 'Edit', edit_dessert_path(dessert) %></td>
        <td><%= link_to 'Destroy', dessert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

